<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="DevSyncPU">

        <class>org.example.model.entities.User</class>
        <class>org.example.model.entities.Tag</class>
        <class>org.example.model.entities.Request</class>
        <class>org.example.model.entities.Task</class>
        <class>org.example.model.entities.Token</class>

        <!-- Database connection settings -->
        <properties>

            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/DevSync"/>
            <property name="jakarta.persistence.jdbc.user" value="ibtissam"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.logging.level" value="DEBUG"/>
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
        </properties>

    </persistence-unit>

</persistence>
